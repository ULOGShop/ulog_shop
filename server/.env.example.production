# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3001

# Frontend URL (with HTTPS!)
FRONTEND_URL=https://your-domain.com

# ==========================================
# TEBEX HEADLESS API
# ==========================================
# Get from: https://creator.tebex.io → Settings → API Keys → Headless
TEBEX_PUBLIC_TOKEN=your_public_token
TEBEX_PRIVATE_KEY=your_private_key

# ==========================================
# TEBEX PLUGIN API
# ==========================================
# Get from: https://creator.tebex.io → Settings → Game Servers
TEBEX_SERVER_SECRET=your_server_secret

# ==========================================
# DISCORD OAUTH2
# ==========================================
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://your-domain.com/auth/discord/callback
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_guild_id

# ==========================================
# MYSQL DATABASE
# ==========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=ulog_user
DB_PASSWORD=your_strong_password
DB_NAME=ulog_reviews